<div class="char_display">
<h3><%= char.name %></h3>

<img src="<%= char.image %>" alt="Woops, no picture" width="240" height="180">

<p><%= char.description %></p>
<p>Number of Comics: <%= char.popularity %></p>
<% if session[:user].id == char.user_id  %>
<p><a href="/delete_char/<%= char.id %>">Delete Character</a></p>
<% elsif session[:user].get_wishlist.get_char_ids.include?(char.id)  %>
  <p>This Character is on your Wishlist</p>
<% else %>
<a href="add_to_wishlist/<%= char.name %>">Add to Wishlist</a>
<% end  %>
</div>