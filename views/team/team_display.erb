<div class="team_display">
<h2><a href="/team_details?id=<%= team.id %>"><%= team.name %></a></h2>
<p><a href="/edit_team?id=<%= team.id %>">Change Name</a>---<a href="/delete_team?id=<%= team.id %>">Delete</a></p>
<table>
  <% team.get_characters("team_id").each do |char|  %>
    <tr><td><%= char.name %>---<a href='/unassign?id=<%= char.id %>'>Unassign</a></td></tr>
  <% end  %>
</table>
<% if team_full?(team) == false %>
<% if session[:user].get_unassigned_chars == []  %>
  <p>No Characters to Assign</p>
<% else  %>
<p>Assign New Character</p>
<form action="/assign">
  <input type="hidden" name="team_id" value="<%= team.id %>">
  <select name="char_to_assign">
    <% session[:user].get_unassigned_chars.each do |char| %>
    <option value="<%=char.id  %>"><%= char.name %></option>
    <%end  %>
  </select>
  <input type="submit" value="Submit">
</form>
<% end  %>
<%else%><p>This Team is full.</p>
<% end %>
</div>
  